{
	"extends": ["eslint:recommended", "next", "prettier"],
	"plugins": ["@typescript-eslint"],
	"root": true,
	"rules": {
		"no-unused-vars": "off"
	},
	"globals": {
		"RequestInit": "readonly"
	},
	"env": {
		"jest": true
	},
	"overrides": [
		{
			"files": "*.tsx?",
			"extends": "plugin:@typescript-eslint/recommended",
			"parser": "@typescript-eslint/parser"
		}
	]
}
